{
  "extends": [
    "config:base",
    ":preserveSemverRanges"
  ],
  "pip_requirements": {
    "fileMatch": [
      "(^|/)docs/requirements.txt$"
    ]
  },
  "packageRules": [
    {
    "matchUpdateTypes": ["minor", "patch"],
    "groupName": "Doc packages",
    "schedule": ["before 2am on monday"],
    "matchCurrentVersion": "!/^0/",
    "automerge": true
    }
  ]
}
