##  Content:
##     Intel(R) Data Analytics Acceleration Library examples creation and run
##******************************************************************************

help:
	@echo "Usage: make {libintel64|dylibintel64|help}"
	@echo "[example=name] [compiler=compiler_name] [mode=mode_name] [threading=threading_name]"
	@echo
	@echo "name              - example name. Please see daal.lst file"
	@echo
	@echo "compiler_name     - can be gnu, clang, or intel. Default value is intel."
	@echo "                    Intel(R) C Compiler as default."
	@echo "                    If compiler=gnu then GNU C compiler will be used."
	@echo "                    If compiler=clang then Clang C compiler will be used."
	@echo
	@echo "threading_name    - can be parallel or sequential. Default value is parallel."
	@echo
	@echo "mode_name         - can be build or run. Default is run"

##------------------------------------------------------------------------------
## examples of using:
##
## make libintel64 example=assoc_rules_apriori_batch  - build  by Intel(R) C++ Compiler (as default) and
##                                 run association_rules example for
##                                 Intel(R) 64 processor family applications,
##                                 static linking
##
## make dylibia32 compiler=clang - build by Clang C++ compiler and
##                                 run all examples of Intel(R) DAAL for
##                                 Intel(R) 64 processor family applications,
##                                 dynamic linking
##
## make libintel64 compiler=gnu  - build by GNU C++ compiler and
##                                 run all examples of Intel(R) DAAL for
##                                 Intel(R) 64 processor family applications,
##                                 static linking
##
## make dylibintel64             - build by Intel(R) C++ Compiler (as default)
##                                 and run all examples of Intel(R) DAAL for
##                                 Intel(R) 64 processor family applications,
##                                 dynamic linking
##
## make dylibintel64 mode=build  - build only (not run) by Intel(R) C++ Compiler (as default)
##                                 all examples of Intel(R) DAAL for
##                                 Intel(R) 64 processor family applications,
##                                 dynamic linking
##
## make help                     - show help
##
##------------------------------------------------------------------------------

include daal.lst

ifndef example
    example = $(DAAL)
endif

ifeq (,$(filter gnu clang,$(compiler)))
    override compiler = intel
endif

ifneq ($(mode),build)
    override mode = run
endif

ifndef DAALROOT
    DAALROOT = ./../../..
endif
DAAL_PATH = "$(DAALROOT)/lib"
TBB_PATH = "$(TBBROOT)/lib"

EXT_LIB := -ldl

ifeq ($(threading),sequential)
    DAAL_LIB_T := $(DAAL_PATH)/libdaal_sequential.$(RES_EXT)
    EXT_LIB += -ltbb -ltbbmalloc
else
    override threading = parallel
    DAAL_LIB_T := $(DAAL_PATH)/libdaal_thread.$(RES_EXT)
    EXT_LIB += -ltbb -ltbbmalloc
endif

DAAL_LIB := $(DAAL_PATH)/libonedal.$(RES_EXT) \
            $(DAAL_PATH)/libdaal_core.$(RES_EXT) \
            $(DAAL_LIB_T)

COPTS := -std=c++17 \
         -pedantic \
         -Wall \
         -Wextra \
         -Werror \
         -Werror=return-type \
         -Werror=uninitialized \
         -Werror=unknown-pragmas \
         -Wno-unused-parameter \
         -stdlib=libc++ \
         -I./source/utils

LOPTS := $(DAAL_LIB) $(EXT_LIB)

RES_DIR=_results/$(compiler)_intel64_$(threading)_$(RES_EXT)
RES = $(addprefix $(RES_DIR)/, $(if $(filter run, $(mode)), $(addsuffix .res ,$(example)), $(addsuffix .exe,$(example))))

ifeq ($(compiler),intel)
    CC = icc
endif

ifeq ($(compiler),gnu)
    CC = g++
    COPTS += -m64
endif

ifeq ($(compiler),clang)
    CC = clang++
    COPTS += -m64
endif

RPATH=-Wl,-rpath,$(DAAL_PATH) -Wl,-rpath,$(TBB_PATH)

libintel64:
	$(MAKE) _make_ex RES_EXT=a
dylibintel64:
	$(MAKE) _make_ex RES_EXT=dylib



_make_ex: $(RES)

vpath
vpath %.cpp $(addprefix ./source/,pca)

.SECONDARY:
$(RES_DIR)/%.exe: %.cpp | $(RES_DIR)/.
	$(CC) $(COPTS) $< -o $@ $(RPATH) $(LOPTS)

$(RES_DIR)/%.res:  $(RES_DIR)/%.exe
	$< > $@

%/.:; mkdir -p $*
